{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/cjs",
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.stories.ts"]
}
